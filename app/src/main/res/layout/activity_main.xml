<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.loborg.quidditchworldcup.MainActivity">

    <LinearLayout
        android:id="@+id/season_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/season_counter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/circle_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/circle1_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:srcCompat="@drawable/circle_1" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/circle2_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:srcCompat="@drawable/circle_2" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/circle3_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:srcCompat="@drawable/circle_3" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/snech_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/filler1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1">

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/snitch_countainer_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/snitchA"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/snitch" />

            <ImageView
                android:id="@+id/snitchB"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/snitch" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/filler2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1">

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ball_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/quaffleA_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/quaffleA"
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:srcCompat="@drawable/quaffle" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/filler3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"></LinearLayout>

        <RelativeLayout
            android:id="@+id/quaffleB_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/quaffleB"
                android:layout_width="64dp"
                android:layout_height="64dp"
                app:srcCompat="@drawable/quaffle" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/reset_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>